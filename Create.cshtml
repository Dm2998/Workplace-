<script>
    // JavaScript code to handle file input change event
    document.getElementById('uploadImage').addEventListener('change', function (e) {
        var fileInput = e.target;
        var previewImageDiv = document.getElementById('previewImage');

        // Remove existing preview image, if any
        while (previewImageDiv.firstChild) {
            previewImageDiv.removeChild(previewImageDiv.firstChild);
        }

        // Display the selected image
        var reader = new FileReader();
        reader.onload = function (event) {
            var img = document.createElement('img');
            img.src = event.target.result;
            img.alt = 'Image Preview';
            previewImageDiv.appendChild(img);
        };

        reader.readAsDataURL(fileInput.files[0]);
    });
</script>




